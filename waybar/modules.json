{
    // Left modules
    "tray": {
        "icon-size": 18,
        "spacing": 10
    },

    // Center modules
    "hyprland/workspaces": {
        "disable-scroll": true,
        "all-outputs": true,
        "warp-on-scroll": false,
        "format": "{icon}",
        "format-icons": {
            "urgent": "<span font_desc='Font Awesome 6 Free'></span>",
            "default": "<span font_desc='Font Awesome 6 Free'></span>"
        },
        "persistent-workspaces": {
            "eDP-2":[1,2,3,4,5]
        }
    },

    "cpu": {
        "interval": 1,
        "format": "{usage}% <span font_desc='Font Awesome 6 Free'></span>"
    },

    "memory": {
        "format": "{}% <span font_desc='Font Awesome 6 Free'></span>"
    },
    "backlight": {
        "device": "intel_backlight",
        "format": "{percent} <span font_desc='Font Awesome 6 Free'></span>"
    },

    "battery": {
        "bat": "BAT1",
        "interval": 60,
        "states": {
	    "full": 100,
	    "quart": 75,
	    "halfed": 45,
            "warning": 30,
            "critical": 15
        },
        "format": "{capacity} <span font_desc='Font Awesome 6 Free'>{icon}</span>",
        "max-length": 25,
	"format-icons": {
	    "full": "",
	    "quart": "",
	    "halfed": "",
	    "warning": "",
	    "critical": ""
	},
	"format-charging": "{capacity} <span font_desc='Font Awesome 6 Free'></span>"
    },

    "clock": {
        "format": "{:%a. %d  %H:%M:%S}",
        "interval": 1,
	"on-click": "ghostty -e arttime -a singingbirds -t :3",
        "tooltip-format": "<tt><small>{calendar}</small></tt>",
        "calendar": {
                    "mode"          : "year",
                    "mode-mon-col"  : 3,
                    "weeks-pos"     : "right",
                    "on-scroll"     : 1,
                    "format": {
                             "months":     "<span color='#ffead3'><b>{}</b></span>",
                             "days":       "<span color='#ecc6d9'><b>{}</b></span>",
                             "weeks":      "<span color='#99ffdd'><b>W{}</b></span>",
                             "weekdays":   "<span color='#ffcc66'><b>{}</b></span>",
                             "today":      "<span color='#ff6699'><b><u>{}</u></b></span>"
	                   }
                   },
        "actions":  {
                    "on-click-right": "mode",
                    "on-scroll-up": "tz_up",
                    "on-scroll-down": "tz_down",
                    "on-scroll-up": "shift_up",
                    "on-scroll-down": "shift_down"
                    }
    },
    "pulseaudio": {
        "format": "{volume} <span font_desc='Font Awesome 6 Free'>{icon}</span>",
        "format-bluetooth": "{volume} <span font_desc='Font Awesome 6 Free'>{icon}</span>",
        "format-muted": "<span font_desc='Font Awesome 6 Free'></span>",
        "format-icons": {
            "alsa_output.pci-0000_00_1f.3.analog-stereo": "",
            "alsa_output.pci-0000_00_1f.3.analog-stereo-muted": "",
            "headphone": " ",
            "hands-free": " ",
            "headset": " ",
            "phone": " ",
            "phone-muted": " ",
            "portable": " ",
            "car": " ",
            "default": [" ", " "]
        },
        "scroll-step": 1,
        "on-click": "pavucontrol",
        "ignored-sinks": ["Easy Effects Sink"]
    },
    "custom/separator": {
        "format": " ",
        "interval": "once",
        "tooltip": false
    },
    "bluetooth": {
        // "controller": "controller1", // specify the alias of the controller if there are more than 1 on the system
        "format": "<span font_desc='Font Awesome 6 Free'></span>",
        "format-disabled": "<span font_desc='Font Awesome 6 Free'> </span>", // an empty format will hide the module
        "format-connected": "<span font_desc='Font Awesome 6 Free'></span>",
        "tooltip-format": "{controller_alias}",
        "tooltip-format-connected": "{controller_alias}\n\n{device_enumerate}",
        "tooltip-format-enumerate-connected": "{device_alias}\t{device_address}",
        "on-click": "blueman-manager"
    },
    "network": {
        "interface": "wlo1",
        "format": "{ifname}",
        "format-wifi": "<span font_desc='Font Awesome 6 Free'></span>",
        "format-ethernet": "<span font_desc='Font Awesome 6 Free'></span>",
        "format-disconnected": "<span font_desc='Font Awesome 6 Free'></span>",
	"tooltip-format": "{ifname} via {gwaddr}",
        "tooltip-format-wifi": "{essid} ({signalStrength}%)",
        "tooltip-format-ethernet": "{ifname}",
        "tooltip-format-disconnected": "Disconnected",
        "max-length": 50,
        "on-click": "nm-connection-editor"
    },
    "custom/gamemode": {
        "exec": "~/.config/waybar/scripts/energy-switch.sh",
        "return-type": "json",
	"format": "<span font_desc='Font Awesome 6 Free'>{text}</span>",
        "interval": "once",
        "on-click": "notify-send 'Changing energy mode'",
        "exec-on-event": "true"
    },
    "custom/notification-toggle": {
        "exec": "~/.config/waybar/scripts/notification-manage.sh",
        "return-type": "json",
        "format": "<span font_desc='Font Awesome 6 Free'>{text}</span>",
        "interval": "once",
        "on-click": "notify-send 'Changing notification mode'",
        "exec-on-event": "true"
    },
    "custom/power-menu": {
        "format": "<span font_desc='Font Awesome 6 Free'></span>",
        "on-click": "~/.config/wofi/powermenu/run.sh"
    }
}

